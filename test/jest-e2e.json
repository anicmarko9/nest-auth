{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "./../src",
  "modulePaths": ["<rootDir>"],
  "coverageDirectory": "./../coverage",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/$1",
    "^@Home/(.*)$": "<rootDir>/home/$1",
    "^@User/(.*)$": "<rootDir>/user/$1",
    "^@Guard/(.*)$": "<rootDir>/guard/$1",
    "^@Prisma/(.*)$": "<rootDir>/prisma/$1"
  }
}
